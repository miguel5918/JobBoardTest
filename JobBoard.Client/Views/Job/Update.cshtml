@model Job
@{
    ViewBag.Title = "Update";
}

<h3>Update</h3>

@using (Html.BeginForm("Update", "Job", FormMethod.Post))
{
    @Html.AntiForgeryToken();

    @Html.ValidationSummary(true);

    <div class="form-group">
        <Label>Id</Label>
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })

    </div>
    <div class="form-group">
        <Label>Job</Label>
        @Html.TextBoxFor(x => x.JobName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.JobName)
    </div>
    <div class="form-group">
        <Label>Description</Label>
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <Label>Created At</Label>
        <div class="col-md-6"> @Html.EditorFor(x => x.CreatedAt, new { @class = "form-control col-5" })</div>
        @Html.ValidationMessageFor(x => x.CreatedAt)
    </div>
    <br />
    <div class="form-group">
        <Label>Expires At</Label>
        <div class="col-md-6">
            @Html.EditorFor(x => x.ExpiresAt, new { @class = "form-control col-5 " })
        </div>
    </div>
   <br />
    <div class="form-group">
        <a href="@Url.Action("Index","Job")" class="col-4 "> Back</a>
        <input type="submit" class="btn btn-success " value="Save" />

    </div>
    <div class="form-horizontal">


    </div>
}
