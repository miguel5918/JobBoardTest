@model List<Job>
@{
    ViewBag.Title = "index";
}

<h3>Job List</h3>

<p>
    @Html.ActionLink("Create New", "New", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">

        <tr>
            <th>
                Id
            </th>
            <th>
                Job
            </th>
            <th>
                Description
            </th>
            <th>
                CreatedAt
            </th>
            <th>
                ExpiresAt
            </th>

            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>
                    @job.Id
                </td>
                <td>
                    @job.JobName
                </td>
                <td>
                    @job.Description
                </td>
                <td>
                    @job.CreatedAt
                </td>
                <td>
                    @job.ExpiresAt
                </td>

                <td>

                    <a href=" @Url.Action("Update", "Job", new { id = job.Id })" class="btn btn-secondary">Update</a>
                    <a href="@Url.Action("Detail", "Job", new { id = job.Id })" class="btn btn-info">Detail</a>
                    <a href="@Url.Action("Delete", "Job", new { id = job.Id } )" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>